{{!-- diseño de facturacion --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
	<body>
			<form action="/Factura/Pagar" method="POST" id="formularioRemision" class="form-comun">
				<div class="form-row">
					<div class="col col-xs-6">
						<h1><a href=" "><img alt="" src="public/img/logo.jpeg" />Granero el Gato</a></h1>
						<h4>Carrera 81 b # 1 28</h4>
						<h4>Belen rincon</h4>
						<h4>Telefono: 5060794</h4>
						<h4>Celular: 3146758175</h4>
					</div>
					<div class="col-sm-2">
						<h4>REMISION # :
						{{input_validation 'numeroRemision' numeroRemision errors class="form-control"}}
		                {{#field_errors 'numeroRemision' errors}}
		                    <span class="help-block text-error">{{this}}</span>
		                {{/field_errors}}
						</h4>
					</div>
				</div>
				<hr/>
				<h1 style="text-align: center;">REMISION</h1>
				<div class="form-row table-responsive">
					<table class="table table-bordered" id="table-detalles">
						<thead>
							<tr>
								<th style="text-align: center;">
									<h4>Codigo de barras  </h4>
								</th>
								
								<th style="text-align: center;">
									<h4>Nombre del producto</h4>
								</th>
								
								<th style="text-align: center;">
									<h4>Cantidad</h4>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td style="text-align: center;"></td>
							</tr>
								{{#each productos}}
								<tr>
									<input type="hidden" value="{{producto}}" name="productoCompra" />
									<input type="hidden" value="{{producto.id}}" name="productoId" />
									<td>
					                    {{input_validation "codigoBarras" codigoBarras errors class="form-control" onkeypress="functionTest(event, this);"}}
						                {{#field_errors 'codigoBarras' errors}}
						                    <span class="help-block text-error">{{this}}</span>
						                {{/field_errors}}
					                </td>
					                <td>
					                    {{input_validation 'productoNombre' producto.nombre errors readonly="true" class="form-control" id="productoNombre{{inc @index}}"}}
						                {{#field_errors 'productoNombre' errors}}
						                    <span class="help-block text-error">{{this}}</span>
						                {{/field_errors}}
					                </td>
					                <td>
					                    {{input_validation 'cantidadCompra' cantidadCompra errors class="form-control" id="cantidadCompra{{inc @index}}"}}
						                {{#field_errors 'cantidadCompra' errors}}
						                    <span class="help-block text-error">{{this}}</span>
						                {{/field_errors}}
					                </td>
				                </tr>
				                {{/each}}
						</tbody>
					</table>
				</div>
				<div class="form-row">
				      <div class="col">
				        <button class="btn btn-secondary btn1 float-right" onclick="/">
							ENVIAR
						</button>
				      </div>
			    </div>
			</form>
		</div>
		<hr/>
		<div class="row">
			<div class="col">
				<div class="panel border border-info text-center">
					<h6> "LA ALTERACIÓN, FALSIFICACIÓN, O COMERCIALIZACIÓN  ILEGAL DE ESTE DOCUMENTO ESTA PENADO POR LA LEY"</h6>
				</div>
			</div>
		</div>
		<script type="text/javascript">
			function functionTest(event, thisOne){
	            if (event.keyCode === 13) {
				    event.preventDefault();

				    var formulario = document.getElementById("formularioRemision");
				    formulario.action = '/Factura';
					formulario.submit();
				  }
	        }

	        window.onload = function() {
	        	var elementosCodigoBarras = document.getElementsByName('codigoBarras');
	        	elementosCodigoBarras[elementosCodigoBarras.length - 1].focus();
			};
		</script>
	</body>
</html>