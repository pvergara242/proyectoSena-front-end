{{!-- formulario para el iniciar sesion --}}
    <center> 
        <div class="cuadro">
            <form action="/auth/sign-in" method="post" name="login" >
                <div id="containerTitulo">
                    <img src="../../img/WhatsApp Image 2020-07-18 at 11.40.34 AM.jpeg" alt="" class="logo4">
                    <label for="" id="titulo">INICIAR SESIÓN</label>
                </div>
                <input type="text" class="campoTxt" id="documento" placeholder="Introduzca su documento de identidad" name="numDoc">
                <input type="password" class="campoTxt" id="contraseña"  placeholder="Introduzca su contraseña" name="contrasena">
                <input type="submit" value="Ingresar" id="botonIng" class="boton"><br><br>
                {{!-- mensaje de error que la contraseña no es valida  --}}
                {{#if message}}
                    <span class="error-login">{{message.content}}</span>
                {{/if}}
            </form>
        </div>
        </center>

