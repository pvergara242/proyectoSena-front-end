{{!-- formulario para registrar un nuevo proveedor--}}
<form action="/proveedores/new-proveedor" method="post" id="formulario">
    <legend>REGISTRO DE PROVEEDOR</legend>
    <div id="divNombre" class="form-group row">
        <label for="inputNombre" class="col-sm-2 col-form-label">Nombre: </label>
        <div class="col-sm-10">
            <input name="nombre" type="text" class="form-control" id="inputNombre" minlength="6" maxlength="20" required>
        </div>

    </div>
    <div id="divNit" class="form-group row">
        <label for="inputNit" class="col-sm-2 col-form-label">NIT: </label>
        <div class="col-sm-10">
            <input name="nit" type="text" class="form-control" id="inputNit" minlength="6" maxlength="15" required>
        </div>

    </div>
    <div id="divEmail" class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email: </label>
        <div class="col-sm-10">
            <input name="email" type="email" class="form-control" id="inputEmail"  minlength="5" maxlength="20" required>
        </div>

    </div>
    <div id="divTelefono" class="form-group row">
        <label for="inputTelefono" class="col-sm-2 col-form-label">Tel√©fono: </label>
        <div class="col-sm-10">
            <input name="telefono" type="tel" class="form-control" id="inputTelefono" minlength="6" maxlength="12" required pattern="^[0-9]+" title="Solo numeros">
        </div>

    </div>
    <div id="divDireccion" class="form-group row">
        <label for="inputDireccion" class="col-sm-2 col-form-label">Direccion: </label>
        <div class="col-sm-10">
            <input name="direccion" type="text" class="form-control" id="inputDireccion" required minlength="5" maxlength="50">
        </div>
    </div>
    <div id="divBotones" class="form-group">
        <div>
            <input type="submit" class="btn btn-primary" value="Registrar">
            <input type="button" class="btn btn-warning" value="Reiniciar Campos"
                onclick="document.getElementById('formulario').reset()">
            <input type="button" class="btn btn-secondary" value="Cancelar"
                onClick="window.location.href='/proveedores/all'">
        </div>
    </div>
</form>