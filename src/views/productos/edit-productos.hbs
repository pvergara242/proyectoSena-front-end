{{!-- formulario para editar un producto--}}
<form action="/productos/actualizar-productos" method="post" id="formulario" onsubmit="return validacion()">
    <img src="../../img/WhatsApp Image 2020-07-18 at 11.40.34 AM.jpeg" alt="" class="logo ">
    <legend>DATOS DE PRODUCTOS</legend>
    <input type="hidden" value="{{productos._id}}" name="productosId" />
    <input type="hidden" value="{{productos.proveedor._id}}" name="proveedorId" />
    <div id="divProveedor" class="form-group row">
        <label for="inputProveedor" class="col-sm-2 col-form-label">Proveedor: </label>
        <div class="col-sm-10">
             <input name="inputProveedor" type="text" class="form-control" id="inputProveedor" value="{{productos.proveedor.nombre}}"  minlength="4" maxlength="20" required>
        </div>
    </div>
    <div id="divNombre" class="form-group row">
        <label for="inputNombre" class="col-sm-2 col-form-label">Nombre: </label>
        <div class="col-sm-10">
            <input name="nombre" type="text" class="form-control" id="inputNombre" value="{{productos.nombre}} " required minlength="6" maxlength="20">
        </div>
    </div>
    <div id="divDescripcion" class="form-group row">
        <label for="inputDescripcion" class="col-sm-2 col-form-label">Descripcion: </label>
        <div class="col-sm-10">
            <input name="descripcion" type="text" class="form-control" id="inputDescripcion" value="{{productos.descripcion}}" minlength="5" maxlength="30" required>
        </div>
    </div>
    <div id="divTipo" class="form-group row">
        <label for="inputTipo" class="col-sm-2 col-form-label">Tipo: </label>
        <div class="col-sm-10">
            <select name="tipo" id="inputTipo" class="custom-select" required>
                {{!-- para mostrar la lista de tipos de productos --}}
                <option value="{{productos.tipo}}">{{productos.tipo}}</option>
                <option value="Bebida">Bebida</option>
                <option value="Comida">Comida</option>
                <option value="Enlatados">Enlatados</option>
                <option value="Verduras">Verduras</option>
                <option value="Granos">Granos</option>
                <option value="Lacteos">Lacteos</option>
                <option value="Granos">Frutas</option>
                <option value="Lacteos">Higiene</option>
            </select>
        </div>
    </div>
     <div id="divPrecio" class="form-group row">
        <label for="inputPrecio" class="col-sm-2 col-form-label">Precio: </label>
        <div class="col-sm-10">
            <input name="precio" type="numer" type="number" step="any" min="0.01" max="1000000" class="form-control" id="inputPrecio" value="{{productos.precio}}" required>
        </div>
    </div>
    <div id="divBotones" class="form-group">
        <div>
            <input type="submit" class="btn btn-primary" value="Guardar">
            <input type="button" class="btn btn-secondary" value="Reiniciar Campos" onclick="window.location.href='/productos/edit/{{productos._id}}'">
            <input type="button" class="btn btn-secondary" value="Cancelar" onClick="window.location.href='/productos/all'">
        </div>
    </div>
</form>