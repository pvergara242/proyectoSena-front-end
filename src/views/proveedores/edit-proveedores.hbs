{{!-- formulario para editar proveedores --}}
<form action="/proveedores/actualizar-proveedor" method="post" id="formulario" onsubmit="return validacion()">
  <img src="../../img/WhatsApp Image 2020-07-18 at 11.40.34 AM.jpeg" alt="" class="logo">
    <legend>DATOS DE PROVEEDOR</legend>
    <input type="hidden" value="{{proveedor._id}}" name="proveedorId" />
    <div id="divNombre" class="form-group row">
        <label for="inputNombre" class="col-sm-2 col-form-label">Nombre: </label>
        <div class="col-sm-10">
            <input name="nombre" type="text" class="form-control" id="inputNombre" value="{{proveedor.nombre}}" minlength="6" maxlength="20" required >
        </div>
    </div>
    <div id="divNit" class="form-group row">
        <label for="inputNit" class="col-sm-2 col-form-label">NIT: </label>
        <div class="col-sm-10">
            <input name="nit" type="text" class="form-control" id="inputNit" value="{{proveedor.nit}}" minlength="6" maxlength="15" required>
        </div>
    </div>
    <div id="divEmail" class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email: </label>
        <div class="col-sm-10">
            <input name="email" type="email" class="form-control" id="inputEmail" value="{{proveedor.email}}"  minlength="5" maxlength="20" required>
        </div>
    </div>
    <div id="divTelefono" class="form-group row">
        <label for="inputTelefono" class="col-sm-2 col-form-label">Tel√©fono: </label>
        <div class="col-sm-10">
            <input name="telefono" type="tel" class="form-control" id="inputTelefono" value="{{proveedor.telefono}}"  minlength="6" maxlength="12" required pattern="^[0-9]+" title="Solo numeros">
        </div>
    </div>
    <div id="divDireccion" class="form-group row">
        <label for="inputDireccion" class="col-sm-2 col-form-label">Direccion: </label>
        <div class="col-sm-10">
            <input name="direccion" type="text" class="form-control" id="inputDireccion" value="{{proveedor.direccion}}"  minlength="5" maxlength="50" required>
        </div>
    </div>
    <div id="divBotones" class="form-group">
        <div>
            <input type="submit" class="btn btn-secondary" value="Guardar">
            <input type="button" class="btn btn-secondary" value="Reiniciar Campos" onclick="window.location.href='/proveedores/edit/{{proveedor._id}}'">
            <input type="button" class="btn btn-secondary" value="Cancelar" onClick="window.location.href='/proveedores/all'">
        </div>
    </div>
</form>